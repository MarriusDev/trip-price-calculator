<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>

<?import javafx.scene.layout.Region?>
<VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: #edc9f5;" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.TripPrice.Controller">
    <padding>
        <Insets top="5.0"/>
    </padding>

    <Label text="Zadej spotřebu svého vozidla (l/100km):" style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-font-weight: bold;"/>
    <TextField fx:id="fuelConsumptionTextField" promptText="l/100km"
               style="-fx-border-width: 2px; -fx-background-color: #f0f0f0; -fx-text-fill: #333333; -fx-font-size: 14px; -fx-background-radius: 15px;"
               alignment="CENTER" maxWidth="100" maxHeight="20"/>

    <Label text="Zadej vzdálenost, kterou pojedeš:" style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-font-weight: bold;"/>
    <TextField fx:id="distanceTextField" promptText="vzdálenost"
               style="-fx-border-width: 2px; -fx-background-color: #f0f0f0; -fx-text-fill: #333333; -fx-font-size: 14px; -fx-background-radius: 15px;"
               alignment="CENTER" maxWidth="100" maxHeight="20"/>

    <Label text="Zadej cenu paliva za 1 litr:" style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-font-weight: bold;"/>
    <TextField fx:id="fuelPriceTextField"
               style="-fx-border-width: 2px; -fx-background-color: #f0f0f0; -fx-text-fill: #333333; -fx-font-size: 14px; -fx-background-radius: 15px;"
               alignment="CENTER" maxWidth="100" maxHeight="20"/>

    <CheckBox fx:id="returnTripCheckBox" text="Včetně zpáteční cesty" style="-fx-font-size: 14px; -fx-text-fill: #333333;"/>

    <Region style="-fx-pref-height: 25px;"/>

    <Button fx:id="calculateButton" text="SPOČÍTAT"
            style="-fx-background-color: #4d33f5; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px; -fx-background-radius: 30px; -fx-border-radius: 30px;"/>

    <Label fx:id="calculatedLabel" style="-fx-font-size: 16px; -fx-text-fill: #333333; -fx-font-weight: bold;"/>


    <BorderPane>
        <top>
            <VBox/>
        </top>
    </BorderPane>
</VBox>
